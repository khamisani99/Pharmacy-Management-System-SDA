
@model IEnumerable<Project.Models.Medicine>
@{
    ViewBag.Title = "Medicine";
}
<section class="content">
    <h2>All Available Medicines</h2>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <p>
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DrugName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DrugPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DrugCompany)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Form)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Unit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dose)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EntryDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ExpiryDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.type)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DrugName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DrugPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DrugCompany)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Form)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Unit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dose)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EntryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpiryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                        </tr>
                    }
                </table>
                <p>
                    <br><a href="~/Home/IndexC">Main Menu</a>
                </p>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

