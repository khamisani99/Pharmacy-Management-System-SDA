<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                
            </ul>           
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <br><a href="@Url.Action("LogOut", "Login")">Logout</a>

                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="" class="brand-link">
                <span class="brand-text font-weight-light">Pharmacy</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">
                            @Session["userName"].ToString().ToUpper()
                        </a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            @if (Session["userType"].ToString() == "admin")
                            {
                                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                            }
                            else if (Session["userType"].ToString() == "customer")
                            {
                                @Html.ActionLink("Home", "IndexC", "Home", new { area = "" }, new { @class = "nav-link" })
                            }
                            else if (Session["userType"].ToString() == "employee")
                            {
                                @Html.ActionLink("Home", "IndexE", "Home", new { area = "" }, new { @class = "nav-link" })
                            }



                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            @if (Session["userType"].ToString() == "admin")
                            {
                                @Html.ActionLink("Medicine", "Index", "Medicin", new { area = "" }, new { @class = "nav-link" })
                            }
                            else if (Session["userType"].ToString() == "customer")
                            {
                                @Html.ActionLink("Medicine", "IndexC", "Medicin", new { area = "" }, new { @class = "nav-link" })
                            }
                            else if (Session["userType"].ToString() == "employee")
                            {
                                @Html.ActionLink("Medicine", "IndexE", "Medicin", new { area = "" }, new { @class = "nav-link" })
                            }



                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            @if (Session["userType"].ToString() == "admin")
                            {
                                @Html.ActionLink("User", "Index", "User", new { area = "" }, new { @class = "nav-link" })
                            }



                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            
        </div>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
